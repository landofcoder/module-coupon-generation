<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::couponcode_elements" title="Lof CouponCode">
                    <resource id="Lof_CouponCode::rule" title="Rule" sortOrder="10">
                        <resource id="Lof_CouponCode::rule_edit" title="Edit Rule" sortOrder="10" />
                        <resource id="Lof_CouponCode::rule_save" title="Save Rule" sortOrder="20" />
                        <resource id="Lof_CouponCode::rule_delete" title="Delete Rule" sortOrder="30" />
                    </resource>
                    <resource id="Lof_CouponCode::generate" title="Generation" sortOrder="20"/>
                    <resource id="Lof_CouponCode::coupon" title="List Coupons" sortOrder="30">
                        <resource id="Lof_CouponCode::coupon_delete" title="Delete Coupon" sortOrder="10" />
                        <resource id="Lof_CouponCode::coupon_save" title="Save Coupon" sortOrder="20" />
                        <resource id="Lof_CouponCode::coupon_edit" title="Edit Coupon" sortOrder="30" />
                        <resource id="Lof_CouponCode::coupon_import" title="Import Coupon" sortOrder="40" />
                    </resource>
                    <resource id="Lof_CouponCode::log" title="Logs Coupons" sortOrder="35">
                        <resource id="Lof_CouponCode::log_delete" title="Delete Coupon Log" sortOrder="10" />
                        <resource id="Lof_CouponCode::log_save" title="Save Coupon Log" sortOrder="20" />
                        <resource id="Lof_CouponCode::log_edit" title="Edit Coupon Log" sortOrder="30" />
                    </resource>
                    <resource id="Lof_CouponCode::report" title="Report Sales By Coupons" sortOrder="40"/>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Lof_CouponCode::config_couponcode" title="Lof Coupon Code" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
